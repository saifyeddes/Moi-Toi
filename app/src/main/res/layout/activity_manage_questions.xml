<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <!-- Title showing the current question number -->
    <TextView
        android:id="@+id/tvQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <!-- Input field for the question -->
    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrer la question"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Radio buttons for the 4 choices -->
    <RadioGroup
        android:id="@+id/radioGroupChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rbChoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choix 1" />
        <RadioButton
            android:id="@+id/rbChoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choix 2" />
        <RadioButton
            android:id="@+id/rbChoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choix 3" />
        <RadioButton
            android:id="@+id/rbChoice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choix 4" />
    </RadioGroup>

    <!-- Buttons for navigation (Previous and Next) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Précédent"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4081"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suivant"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4081"
            android:padding="14dp" />
    </LinearLayout>
</LinearLayout>
