<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5">

    <!-- Partie Homme -->
    <LinearLayout
        android:id="@+id/layoutMan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/card_background_blue"> <!-- Bleu adouci -->

        <ImageView
            android:id="@+id/iconMan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_boy"
            android:background="@drawable/circle_bg_boy"
            android:scaleType="centerCrop"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homme"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Ligne de sÃ©paration -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AAAAAA" />

    <!-- Partie Femme -->
    <LinearLayout
        android:id="@+id/layoutWoman"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/card_background_pink"> <!-- Rose adouci -->

        <ImageView
            android:id="@+id/iconWoman"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_girl"
            android:background="@drawable/circle_bg_girl"
            android:scaleType="centerCrop"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femme"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
